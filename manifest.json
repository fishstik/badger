{
	"name": "Shaking Badger",
	"version": "0.1",
	"description": "The universal favicon badger",
	"icons": {
		"32": "src/icons/inactive_32.png"
	},
	"manifest_version": 2,
	"background": {
		"scripts": ["src/background.js"]
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["src/content.js"]
	}],
	"permissions": [
		"storage",
		"tabs",
		"http://*/",
		"https://*/"
	],
	"browser_action": {
		"default_title": "Shaking Badger",
		"default_popup": "src/popup.html"
	}
}
